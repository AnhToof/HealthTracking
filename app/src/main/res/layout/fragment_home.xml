<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.g5team.healthtracking.Fragments.HomeFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/frameLayout">

            <com.g5team.healthtracking.Views.CircleProgressBar
                android:id="@+id/customProgressBar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center|top"/>

        </FrameLayout>

        <SurfaceView
            android:id="@+id/preview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/tv_result_hb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textSize="27sp"
            app:layout_constraintLeft_toRightOf="@+id/textView4"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="78dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_diagnose" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:text="Huyết Áp: "
            android:textSize="27sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_diagnose" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhịp Tim: "
            android:textSize="27sp"
            android:layout_marginLeft="42dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="78dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_diagnose" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bmp"
            app:layout_constraintLeft_toRightOf="@+id/tv_result_hb"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="110dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_diagnose" />

        <TextView
            android:id="@+id/tv_result_bp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="27sp"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_diagnose"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="47dp"
            android:layout_height="16dp"
            android:text="mm Hg"
            app:layout_constraintLeft_toRightOf="@+id/tv_result_bp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_diagnose" />

        <Button
            android:id="@+id/btn_diagnose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chẩn Đoán"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.501" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
